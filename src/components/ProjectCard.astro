---
import { Icon } from "astro-icon/components";

interface Props {
  title: string;
  description: string;
  image?: string;
  url?: string;
  status: "completed" | "developing" | "planned";
  tags: string[];
}

const { title, description, image, url, status, tags } = Astro.props;

const statusColors = {
  completed:
    "bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-300",
  developing: "bg-blue-100 text-blue-800 dark:bg-blue-900 dark:text-blue-300",
  planned: "bg-gray-100 text-gray-800 dark:bg-gray-700 dark:text-gray-300",
};

const statusText = {
  completed: "已完成",
  developing: "开发中",
  planned: "计划中",
};
---

<a
  href={url || "#"}
  target={url ? "_blank" : "_self"}
  class="card-base block rounded-[var(--radius-large)] overflow-hidden hover:scale-[1.02] transition-transform duration-300 no-underline"
>
  <div
    class="h-40 w-full overflow-hidden bg-neutral-100 dark:bg-neutral-800 relative"
  >
    {
      image ? (
        <img src={image} alt={title} class="w-full h-full object-cover" />
      ) : (
        <div class="w-full h-full flex items-center justify-center text-neutral-400 dark:text-neutral-600">
          <Icon name="material-symbols:image-outline" class="text-6xl" />
        </div>
      )
    }
    <div
      class={`absolute top-3 right-3 px-2.5 py-1 rounded-md text-xs font-bold shadow-sm ${statusColors[status]}`}
    >
      {statusText[status]}
    </div>
  </div>
  <div class="p-5">
    <h3 class="text-lg font-bold mb-2 text-neutral-900 dark:text-neutral-100">
      {title}
    </h3>
    <p
      class="text-sm text-neutral-600 dark:text-neutral-400 line-clamp-2 mb-4 h-10"
    >
      {description}
    </p>
    <div class="flex flex-wrap gap-2">
      {
        tags.map((tag) => (
          <span class="px-2 py-1 rounded-md bg-neutral-200 dark:bg-neutral-700 text-xs text-neutral-600 dark:text-neutral-300">
            #{tag}
          </span>
        ))
      }
    </div>
  </div>
</a>
